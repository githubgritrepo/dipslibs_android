<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DipsVideoConfren"
    android:background="#FCFCFF">

    <FrameLayout
        android:id="@+id/big_video_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFF">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFF">
        <RelativeLayout
            android:id="@+id/offUsersVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/video_off_tips2"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/zm_conf_no_avatar"/>

                <ImageView
                    android:id="@+id/video_off_tips3"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/zm_conf_no_avatar"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/llUsersVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/video_list_contain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userVideoList"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:clipChildren="true">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/logo_company"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/company_logo" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/timer"
                android:background="@drawable/oval_background_timer"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_timer"
                    android:layout_gravity="center_vertical"
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_timer" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/poweredbyzoom"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/zm_watermark_sdk" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layout_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llUsersVideo"
            android:layout_marginBottom="54dp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifLoading"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/anim_bvic" />

        <ImageView
            android:id="@+id/imgBatikVic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/batik_bvic" />
    </RelativeLayout>
    <include layout="@layout/layout_bottom_action_bar"/>
    <include layout="@layout/progress_loading" />
</FrameLayout>