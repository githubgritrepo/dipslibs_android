<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close_schedule"
        android:layout_gravity="end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"/>
    <TextView
        android:textAlignment="textStart"
        android:id="@+id/textHeadSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|start"
        android:text="@string/headline_schedule"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginBottom="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_date_schedule"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_Date"
            android:background="@drawable/bg_textinput"
            android:padding="20dp"
            android:drawableEnd="@drawable/ic_date"
            android:drawableTint="@color/zm_grey"
            android:textSize="15dp"
            android:inputType="none"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:background="@drawable/bg_textinput"
            android:id="@+id/et_time"
            android:textSize="15dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dropDownHeight="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical"
        android:minWidth="56dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSchedule2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:textStyle="bold"
            android:textSize="13dp"
            android:background="@drawable/oval_background_10dp"
            android:backgroundTint="@color/zm_button"
            android:text="@string/schedule_a_task"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/end_call"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oval_background_10dp"
            android:text="@string/schedule_a_task"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/zm_button"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>