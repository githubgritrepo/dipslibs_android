<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_textinput_5">

            <ImageView
                android:id="@+id/imgUpQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/uploadgrey" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvContentQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertqrcode_trx"
        android:layout_toRightOf="@id/cvImg"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:textStyle="italic"
        android:textSize="14dp"
        android:textColor="@color/zm_text_grey"/>

</RelativeLayout>